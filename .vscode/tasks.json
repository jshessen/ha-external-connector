{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Code Quality: All Tools",
            "type": "shell",
            "command": "${workspaceFolder}/.venv/bin/python",
            "args": [
                "scripts/code_quality.py"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        },
        {
            "label": "Lint: All Tools (With Output Capture)",
            "type": "shell",
            "command": "/bin/bash",
            "args": [
                "-c",
                "${workspaceFolder}/.venv/bin/python scripts/lint.py 2>&1 | tee .vscode/last_lint_output.log"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        },
        {
            "label": "Lint: With Standard Logging",
            "type": "shell",
            "command": "/bin/bash",
            "args": [
                "-c",
                "${workspaceFolder}/.venv/bin/python scripts/lint.py 2>&1 | tee .vscode/vs_code_task.log"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        },
        {
            "label": "Lint: With Marker Detection",
            "type": "shell",
            "command": "/bin/bash",
            "args": [
                "-c",
                "echo '*  Task starting...' > ${workspaceFolder}/.vscode/lint_with_markers.log && ${workspaceFolder}/.venv/bin/python scripts/lint.py 2>&1 | tee -a ${workspaceFolder}/.vscode/lint_with_markers.log && echo '*  Task completed.' >> ${workspaceFolder}/.vscode/lint_with_markers.log"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        },
        {
            "label": "Test: Simple Directory List",
            "type": "shell",
            "command": "ls",
            "args": ["-la", "."],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        },
        {
            "label": "MyPy: Type Check",
            "type": "shell",
            "command": "${workspaceFolder}/.venv/bin/python",
            "args": ["-m", "mypy", "src/", "tests/", "scripts/", "setup.py"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [
                {
                    "owner": "mypy",
                    "fileLocation": "absolute",
                    "pattern": {
                        "regexp": "^(.+?):(\\d+):(\\d+):\\s+(error|warning|note):\\s+(.+)\\s+\\[(.+)\\]$",
                        "file": 1,
                        "line": 2,
                        "column": 3,
                        "severity": 4,
                        "message": 5,
                        "code": 6
                    }
                }
            ]
        },
        {
            "label": "Ruff: Check",
            "type": "shell",
            "command": "${workspaceFolder}/.venv/bin/python",
            "args": ["-m", "ruff", "check", "src/", "tests/", "scripts/", "setup.py"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [
                {
                    "owner": "ruff",
                    "fileLocation": "absolute",
                    "pattern": {
                        "regexp": "^(.+?):(\\d+):(\\d+):\\s+(.+?)\\s+(.+)$",
                        "file": 1,
                        "line": 2,
                        "column": 3,
                        "severity": 4,
                        "message": 5
                    }
                }
            ]
        },
        {
            "label": "Ruff: Fix",
            "type": "shell",
            "command": "${workspaceFolder}/.venv/bin/python",
            "args": ["-m", "ruff", "check", "--fix", "src/", "tests/", "scripts/", "setup.py"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "Test: Run All",
            "type": "shell",
            "command": "${workspaceFolder}/.venv/bin/python",
            "args": ["-m", "pytest", "tests/", "-v"],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "Validate Lint Scripts Sync",
            "type": "shell",
            "command": "echo",
            "args": ["⚠️ Remember to sync lint.py and lint.sh when modifying linting tools!"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Quick: Python Version",
            "type": "shell",
            "command": "${workspaceFolder}/.venv/bin/python",
            "args": ["--version"],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Quick: Ruff Check",
            "type": "shell",
            "command": "${workspaceFolder}/.venv/bin/ruff",
            "args": ["check", "src/", "--no-fix"],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Quick: Environment Info",
            "type": "shell",
            "command": "/bin/bash",
            "args": ["-c", "echo 'Python:' && ${workspaceFolder}/.venv/bin/python --version && echo 'Ruff:' && ${workspaceFolder}/.venv/bin/ruff --version && echo 'Working Directory:' && pwd"],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Quick Fix: Black Format All",
            "type": "shell",
            "command": "${workspaceFolder}/.venv/bin/black",
            "args": ["src/", "tests/", "scripts/", "setup.py"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "clear": true
            },
            "problemMatcher": []
        },
        {
            "label": "Quick Fix: Black Format Current File",
            "type": "shell",
            "command": "${workspaceFolder}/.venv/bin/black",
            "args": ["${file}"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "clear": true
            },
            "problemMatcher": []
        },
        {
            "label": "Quick Fix: Ruff Fix All",
            "type": "shell",
            "command": "${workspaceFolder}/.venv/bin/ruff",
            "args": ["check", "--fix", "src/", "tests/", "scripts/", "setup.py"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "clear": true
            },
            "problemMatcher": []
        },
        {
            "label": "Quick Fix: Ruff Fix Current File",
            "type": "shell",
            "command": "${workspaceFolder}/.venv/bin/ruff",
            "args": ["check", "--fix", "${file}"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "clear": true
            },
            "problemMatcher": []
        },
        {
            "label": "Quick Fix: Ruff Format All",
            "type": "shell",
            "command": "${workspaceFolder}/.venv/bin/ruff",
            "args": ["format", "src/", "tests/", "scripts/", "setup.py"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "clear": true
            },
            "problemMatcher": []
        },
        {
            "label": "Quick Fix: Ruff Format Current File",
            "type": "shell",
            "command": "${workspaceFolder}/.venv/bin/ruff",
            "args": ["format", "${file}"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "clear": true
            },
            "problemMatcher": []
        },
        {
            "label": "Quick Fix: Black + Ruff Fix All",
            "type": "shell",
            "command": "/bin/bash",
            "args": ["-c", "echo '🔧 Running Black formatter...' && ${workspaceFolder}/.venv/bin/black src/ tests/ scripts/ setup.py && echo '🔧 Running Ruff fixes...' && ${workspaceFolder}/.venv/bin/ruff check --fix src/ tests/ scripts/ setup.py && echo '✅ All formatting fixes complete!'"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "clear": true
            },
            "problemMatcher": []
        },
        {
            "label": "Quick Fix: Black + Ruff Fix Current File",
            "type": "shell",
            "command": "/bin/bash",
            "args": ["-c", "echo '🔧 Running Black formatter on ${fileBasename}...' && ${workspaceFolder}/.venv/bin/black '${file}' && echo '🔧 Running Ruff fixes on ${fileBasename}...' && ${workspaceFolder}/.venv/bin/ruff check --fix '${file}' && echo '✅ Formatting fixes complete for ${fileBasename}!'"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "clear": true
            },
            "problemMatcher": []
        },
        {
            "label": "Quick Fix: Import Organization",
            "type": "shell",
            "command": "/bin/bash",
            "args": ["-c", "echo '📦 Organizing imports...' && ${workspaceFolder}/.venv/bin/ruff check --select I --fix src/ tests/ scripts/ setup.py && echo '✅ Import organization complete!'"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "clear": true
            },
            "problemMatcher": []
        },
        {
            "label": "Quick Fix: Line Length Issues (W2xx)",
            "type": "shell",
            "command": "/bin/bash",
            "args": ["-c", "echo '📏 Fixing line length issues...' && ${workspaceFolder}/.venv/bin/black --line-length=88 src/ tests/ scripts/ setup.py && ${workspaceFolder}/.venv/bin/ruff check --select E501,W292,W391 --fix src/ tests/ scripts/ setup.py && echo '✅ Line length fixes complete!'"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "clear": true
            },
            "problemMatcher": []
        },
        {
            "label": "Diagnostics: Show Tool Coverage",
            "type": "shell",
            "command": "/bin/bash",
            "args": ["-c", "echo '🔍 Linting Tool Coverage:' && echo '  Ruff (fast auto-fix): E/W/F/I/UP/B/SIM rules' && ${workspaceFolder}/.venv/bin/ruff --version && echo '  Flake8 (plugins): Complex analysis + plugin rules' && ${workspaceFolder}/.venv/bin/flake8 --version && echo '  Black (formatting): Code style standardization' && ${workspaceFolder}/.venv/bin/black --version && echo '  Pylint (design): Design patterns (overlaps disabled)' && ${workspaceFolder}/.venv/bin/pylint --version | head -1"],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "clear": true
            },
            "problemMatcher": []
        }
    ]
}
